---
import Navbar from "../components/layout/Navbar.astro"
import MarketingLayout from "../layouts/MarketingLayout.astro"
import Footer from "../components/layout/Footer.astro"
import Numbers from "../assets/404.svg"
---

<MarketingLayout title="Stoat: 404" backgroundColor="#000000">
    <Navbar />

    <div class="spacer"></div>
    <div class="lr-pad">
        <div class="center">
            <img
                src={Numbers.src}
                alt="404"
                class="goostle"
            />
            <h1 class="main-heading">Page not found</h1>
            <p class="main-heading-sub">
                We couldn't find the page you were looking for. Maybe it's a
                typo, maybe it's a broken link.
            </p>
        </div>
    </div>
    <Footer />
</MarketingLayout>
<style lang="scss">
    .lr-pad {
        max-width: min(130ch, 90vw);
        margin: 0 auto;
        display: grid;
        padding-bottom: 4rem;
    }

    .spacer {
        height: 12rem;
    }

    .center {
        display: block;
        margin: 0 auto;
        text-align: center;
    }

    .main-heading {
        font-size: 4rem;
        font-weight: 750;
        color: white;
        line-height: 1;
    }

    .main-heading-sub {
        font-size: 1.5rem;
        color: white;
        opacity: 0.7;
        margin-bottom: 4rem;
        line-height: 1.5;
    }

    .goostle-hint {
        font-size: 1.2rem;
        color: white;
        opacity: 0.7;
        margin-top: 2rem;
        margin-bottom: 2rem;
    }

    .goostle {
        height: 20rem;
        opacity: 100%;
        display: block;
        margin: 0 auto;
    }
</style>
