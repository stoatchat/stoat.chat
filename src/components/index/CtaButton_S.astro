---
interface Props {
    label: string
    href: string
    primary?: boolean
}

const { label, href, primary } = Astro.props
---

<a href={href} class="cta-button-container">
    <span class:list={['cta-button', primary && 'cta-button-primary']}>
        <span class="cta-button-label">{label}</span>
    </span>
</a>

<style lang="scss">
    .cta-button-container {
        border-radius: 9999px;

        &:link, &:visited {
            text-decoration: none;
        }
    }

    .cta-button-container:hover {
        border-top: 5px solid transparent;
        margin-top: -5px;
        border-bottom: 5px solid transparent;
        margin-bottom: -5px;
        height: 100%;

        .cta-button {
            filter: brightness(0.9);
            transform: scale(0.98) translateY(-2px) rotate(-2deg);
        }
    }

    .cta-button-container:active {
        .cta-button {
            filter: brightness(0.8);
            transform: scale(0.92) translateY(-2px) rotate(-2deg);
        }
    }

    .cta-button {
        backface-visibility: hidden;
        border-radius: 9999px;
        width: 272.97px;
        height: 62px;
        background: linear-gradient(180deg, rgb(255 255 255 / 0.2) 0%, rgb(160 160 160 / 0.2) 100%);
        display: grid;
        place-items: center;
        will-change: transform;

        transition: filter 0.2s var(--easing), transform 0.2s var(--easing);
    }

    .cta-button-primary {
        background-color: var(--cpx);
    }

    .cta-button-label {
        font-size: 1.4rem;
        letter-spacing: 0.02em;
        font-weight: 500;
        color: white;
    }
</style>