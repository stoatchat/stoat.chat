---
import Cta from "./Cta_S.astro"
import HeroTagline from "../../assets/index/other/hero-tagline.svg"
import IndexHeroRenameNotice from "./IndexHeroRenameNotice_S.astro"
---

<header>
    <IndexHeroRenameNotice />
    <img src={HeroTagline.src} alt="The app where you are the main character." class="tagline" />
    <Cta />
</header>
<style lang="scss">
    header {
        padding-top: 10rem;
    }

    .tagline {
        width: min(90vw, 800px);
        height: auto;
        display: block;
        margin: 2rem auto 4rem auto;
        user-select: none;
        pointer-events: none;
    }

    p {
        font-size: 1.5rem;
        max-width: 600px;
        margin: 0 auto 4rem auto;
        text-align: center;
        opacity: 0.9;
        line-height: 1.25;
    }
</style>
